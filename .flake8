[flake8]
max-line-length = 88
extend-ignore = E203, W503
exclude = .git,__pycache__,build,dist,*.egg-info,venv,.venv
per-file-ignores =
    # Ignore missing docstrings in tests
    tests/*:D100,D101,D102,D103,D104,D105,D106,D107
    # Ignore missing docstrings in migrations
    */migrations/*:D100,D101,D102,D103,D104,D105,D106,D107
max-complexity = 10
docstring-convention = google 